@model ConsumeAPI.ResponseModel.ProductResponseModel
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>
            Web API Consume
        </title>
    </head>
    <body>
        @{
            if (TempData["errorMessage"] != null)
        {
            <p style="color:red">
                
                @TempData["errorMessage"]?.ToString()    

            </p>          
        }
        }
        <form asp-action="Create" asp-controller="Home" method="post">
            <label>Ürün Adı : </label>
            <input type="text" asp-for="@Model.Name"/>
            <br />
            <hr />
            <label>Ürün Fiyatı : </label>
            <input asp-for="@Model.Price"/>
            <br />
            <hr />
            <label>Ürün Stoğu : </label>
            <input asp-for="@Model.Stock"/>
            <br />
            <div>
                <a asp-action="Index" asp-controller="Home">Geri Dön</a>
                <button type="submit">Gönder</button>
            </div>

        </form>
    </body>
</html>